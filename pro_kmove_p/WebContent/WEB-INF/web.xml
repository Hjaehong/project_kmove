<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvcExample</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>main.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DirectoryController</servlet-name>
    <servlet-class>com.java.mvc01.DirectoryController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DirectoryController</servlet-name>
    <url-pattern>/aaa/bbb</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SampleController</servlet-name>
  </servlet>
  <servlet-mapping>
    <servlet-name>SampleController</servlet-name>
    <url-pattern>*.a</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SampleCnt</servlet-name>
    <servlet-class>com.java.mvc03.SampleCnt</servlet-class>
  </servlet>
</web-app>