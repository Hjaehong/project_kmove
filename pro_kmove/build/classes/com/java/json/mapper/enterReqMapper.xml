<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.java.json.mapper.enterReqMapper">
	<resultMap type="com.java.json.action.JsonID" id="JsonID">
		<result column="id" property="id"/>
		<result column="board_number" property="board_number"/>
		<result column="okcancel" property="okcancel"/>
	</resultMap>
	
	<insert id="enterReq" parameterType="java.util.HashMap">
		insert into enterreq(id, board_number, okcancel) values(#{id}, #{board_number}, 0) 
	</insert>
	
	<select id="enterlist" resultType="com.java.json.action.JsonID" parameterType="int">
		select * from enterreq where board_number = #{board_number}
	</select>
	
	<delete id="cancel" parameterType="java.util.HashMap">
		delete from enterreq where id=#{id} and board_number=#{board_number}
	</delete>
	
	<update id="changeOC" parameterType="java.util.HashMap">
		UPDATE enterreq SET okcancel = 1 WHERE id=#{id} and board_number=#{board_number}
	</update>
</mapper>